{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "users": {
      "type": "object",
      "description": "Collection of users in the ToDo app",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user"
        },
        "birthday": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the user's birthday"
        },
        "color": {
          "type": "string",
          "description": "Favorite color of the user"
        },
        "created_time": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the user account was created"
        },
        "display_name": {
          "type": "string",
          "description": "Display name of the user"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address of the user"
        }
      },
      "required": ["uid", "created_time", "display_name", "email"]
    },
    "tasks": {
      "type": "object",
      "description": "Collection of tasks in the ToDo app",
      "properties": {
        "task_id": {
          "type": "string",
          "description": "Unique identifier for the task"
        },
        "title": {
          "type": "string",
          "description": "Title or short description of the task"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the task",
          "nullable": true
        },
        "created_time": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the task was created"
        },
        "due_time": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the task is due",
          "nullable": true
        },
        "completed": {
          "type": "boolean",
          "description": "Whether the task has been completed"
        },
        "user_id": {
          "type": "string",
          "description": "Reference to the user who owns this task"
        }
      },
      "required": ["task_id", "title", "created_time", "user_id", "completed"]
    }
  }
}
